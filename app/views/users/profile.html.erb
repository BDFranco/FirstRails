<% content_for :title, "My Posts" %>

<div class="container mt-5">
  <h2 class="text-center mb-4">ðŸ“Œ My Blog Posts</h2>

  <div class="row">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= truncate(post.content, length: 100) %></p>
              <small class="text-muted">By <%= post.user.email %></small>

              <p class="mt-2">
                <%= link_to "Show this post", post_path(post), class: "btn btn-outline-secondary btn-sm" %>
              </p>

              <div class="d-flex">
                <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary btn-sm me-2" %>
                <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted text-center">No posts available. Create one!</p>
    <% end %>
  </div>
</div>
